<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>pages-signin</welcome-file>
    </welcome-file-list>
    
    
    
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>tracker.servlet.Index</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>tracker.servlet.Login</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>Signup</servlet-name>
        <servlet-class>tracker.servlet.Signup</servlet-class>
    </servlet>
    
    
    
    
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
        <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/pages-signin</url-pattern>
    </servlet-mapping>
        <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/pages-signup</url-pattern>
    </servlet-mapping>
    
    
    
    
    
    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <resource-ref>
        <res-ref-name> BiblioManager </res-ref-name>
        <res-type>javaxx.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
